%div.container-fluid
  %div.col-md-2.sidebar.hidden-sm.hidden-xs
    = render 'admin/shared/sidebar', active: title
  %div.col-md-10.shad-left
    %h1
      = title

    %ul.nav.nav-tabs
      %li.active{ role: 'presentation' }
        = link_to main[0], send(main[1])
      %li{ role: 'presentation' }
        = link_to new[0], send(new[1])
    %br
    %div.search
      - if search_location
        = render search_location
      - else
        = render 'admin/shared/search'
      %p{ style: 'text-align:right' }
        = page_entries_info data

    = render 'admin/shared/table', data: data, header: header, methods: methods, links: links

    %div.text-center
      = paginate data, theme: 'twitter-bootstrap-3', pagination_class: 'pagination-centered'
      %br
      = page_entries_info data
      %br
      %span Results:
      = link_to '10', params.merge(per_page: 10)
      = link_to '20', params.merge(per_page: 20)
      = link_to '50', params.merge(per_page: 50)
      = link_to '100', params.merge(per_page: 100)
      = link_to '200', params.merge(per_page: 200)

-# data = variable
-# header = array table headers
-# methods = array of table methods
-# links = array of table links
-# new = array with ['link', new_something_path]
-# main = array with ['link', somethings_path]
-# title = title