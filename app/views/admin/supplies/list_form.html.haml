- cache [Organization.cache_key(params), User.cache_key(params)] do
  = select_tag :organization_id, options_from_collection_for_select(Organization.all.order(:name), :id, :name), {include_blank: 'Add Organization',  class: 'form-control input-sm short-form', style: 'width:100px;'}
  = select_tag :user_id, options_from_collection_for_select(User.all.order(:name), :id, :name), {include_blank: 'Add User',  class: 'form-control input-sm short-form', style: 'width:100px;'}
  = submit_tag 'add', class: 'btn btn-sm btn-default'