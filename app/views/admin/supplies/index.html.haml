%div.container-fluid
  %div.col-md-2.sidebar
    = render 'admin/sidebar', active: 'supplies'
  %div.col-md-10
    %h1 Supplies
    %ul.nav.nav-tabs
      %li.active{ role: 'presentation' }
        = link_to 'Supplies', admin_supplies_path
      %li{ role: 'presentation' }
        = link_to 'New Supply', new_admin_supply_path

    = render 'admin/table', data: @supplies,
                            header: %w"Name Type Maximum Notes",
                            methods: [:name, :type, :maximum, :notes],
                            links: [ ['edit', :edit_admin_supply_path], ['delete', :admin_supply_path, method: :delete] ]
