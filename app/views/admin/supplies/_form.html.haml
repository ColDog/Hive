%br
%div.row
  %div.col-md-3
    = form_for variable, url: url, method: method do |f|
      %div.form-group
        %label Name
        = f.text_field :name, placeholder: 'name', class: 'form-control'
      %div.form-group
        %label Maximum Number
        = f.number_field :maximum, placeholder: 'maximum quantity available', class: 'form-control'
      %div.form-group
        %label Description
        = f.text_area :notes, placeholder: 'notes', class: 'form-control'
      %br
      = f.submit 'Create', class: 'btn btn-primary'
  %div.col-md-9
    %table.table
      %thead
        %tr
          %th ID
          %th User
          %th Name
          %th Remove
      - variable.supply_lists.each do |list|
        %tr
          %td
            = list.id
          %td
            = link_to list.user.name, edit_admin_user_path(list.user)
          %td
            = list.name
          %td
            = link_to 'remove', admin_supply_list_path(list), method: :delete