%div.container-fluid
  %div.col-md-2.sidebar
    = render 'admin/sidebar', active: 'organizations'
  %div.col-md-10
    %h1 Organizations
    %ul.nav.nav-tabs
      %li.active{ role: 'presentation' }
        = link_to 'Organizations', admin_organizations_path
      %li{ role: 'presentation' }
        = link_to 'New Organization', new_admin_organization_path

    = render 'admin/table', data: @organizations,
                            header: %w"Name Employees Description Tags Actions",
                            methods: [:name, [:users,:count], :description, :tags],
                            links: [ ['edit', :edit_admin_organization_path], ['delete', :admin_organization_path, method: :delete] ]
