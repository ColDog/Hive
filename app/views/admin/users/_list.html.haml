%div.box
  %h4 Supplies
  %table.table
    %thead
      %tr
        %th Supply Name
        %th Name
        %th Notes
        %th Organization
        %th Action
    - @user.supply_lists.each do |list|
      %tr
        %td
          = list.supply.name
        %td
          = list.name
        %td
          = list.notes
        %td -
        %td
          = link_to 'remove', admin_supply_lists_remove_owner_path(list), method: :post
    - @user.organization_supplies.each do |list|
      %tr
        %td
          = list.supply.name
        %td
          = list.name
        %td
          = list.notes
        %td
          = list.organization.name
        %td -
  %hr
  %div
    = form_tag admin_supply_lists_add_owner_path, method: :post do
      = select_tag :id, option_groups_from_collection_for_select(Supply.all, :picks, :name, :id, :name), {class: 'short-form form-control'}
      = hidden_field_tag :user_id, variable.id
      = text_field_tag :notes, '', placeholder: 'notes', class: 'form-control short-form'
      = submit_tag 'Add', class: 'btn btn-primary'

%div.box
  %h4 Organizations
  %table.table
    %thead
      %tr
        %th Organization Name
        %th Admin Contact
        %th Accountant
        %th Remove
    - variable.organization_members.each do |list|
      %tr
        %td
          = list.organization.name
        %td
          = list.admin_contact
        %td
          = list.account_contact
        %td
          = link_to 'remove', admin_organization_member_path(list), method: :delete
  %hr
  %div
    = form_for :organization_member, url: admin_organization_members_path, method: :post do |f|
      = f.hidden_field :user_id, value: variable.id
      = f.select :organization_id, options_from_collection_for_select(Organization.all, :id, :name), {}, {class: ' short-form form-control'}
      &nbsp;&nbsp;
      = f.check_box :account_contact
      = f.label 'Accountant?'
      &nbsp;&nbsp;
      = f.check_box :admin_contact
      = f.label 'Administrator?'
      &nbsp;&nbsp;
      = f.submit 'Add', class: 'btn btn-primary'

%div.box
  %h4 Send Email
  = form_tag admin_users_mail_path(variable), method: :post do
    = fields_for :mail do |f|
      %div.form-group
        %label Content
        = f.text_area :content, value: "I've got you all registered and you are officially part of the HiVE! You will receive a membership invoice each month on the 1st",
          class: 'form-control', rows: 10
      %div.form-group
        %label
          = f.check_box :supplies, checked: true
          Include Supplies
        %label
          = f.check_box :account_type, checked: true
          Include Account Type
      %div.form-group
        %label Attachments
        = f.select :attachments, options_from_collection_for_select(Attachment.all, :id, :name), {},{multiple: true, class: 'form-control'}
      = submit_tag 'Send Email', class: 'btn btn-primary'
